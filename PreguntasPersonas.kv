<PreguntasPersonas>
    orientation:"vertical"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'imagenes/personas.jpg'
        Color:
            rgb:145, 145, 249
    GridLayout:
        cols:2
        Label:
            id:Quien
            text:"¿Con quién apareces en estas fotos?"
            color:145, 145, 249
        TextInput:
            multiline:False
            size:20,20
        Label:
            id:Donde
            text:"¿Dónde apareces en estas fotos?"
            color:145, 145, 249
        TextInput:
            multiline:False
            size:20,20

        Label:
            id:Relacion
            text:"¿Qué relacion tienes con estas personas?\n(Selecciona uno)"
            color:145, 145, 249
        GridLayout:
            cols:3
            ToggleButton:
                text:"Amigos"
                group:"relacion"
            ToggleButton:
                text:"Familia"
                group:"relacion"
            ToggleButton:
                text:"Relacion formal"
                group:"relacion"

        Label:
            id:mylabel
            text:"Personas"
            color:145, 145, 249
        TextInput:
            multiline:False
    Button:
        size: self.size
        text: "Aceptar"
        on_press: print(mylabel.text)