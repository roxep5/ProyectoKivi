<MyLayout2>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'bosque.png'

        padding: 50
        spacing: 20

        Button:
            text: "<- Salir"
            pos_hint: {'center_x': 0.1}
            size_hint: (None, None)
            width: 100
            height: 50
            color: 1.5,1.6,0.9,2



        Label:
            text: "Elija un tipo de presentacion"
            font_size: 30
            color: 1.5,1.35,0.9,2

        Button:

            text: "Recuerdos con persona"
            pos_hint: {'center_x': 0.5}
            size_hint: (None, None)
            width: 200
            height: 50
            color: 1.5,1.6,0.9,2

        Button:

            text: "Recuerdos de un lugar"
            pos_hint: {'center_x': 0.5}
            size_hint: (None, None)
            width: 200
            height: 50
            color: 1.5,1.6,0.9,2

        Button:

            text: "Recuerdos de un evento"
            pos_hint: {'center_x': 0.5}
            size_hint: (None, None)
            width: 200
            height: 50
            color: 1.5,1.6,0.9,2



        Button:

            text: "Continuar ->"
            pos_hint: {'center_x': 0.9}
